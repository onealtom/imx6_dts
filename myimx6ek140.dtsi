&gpc {
    fsl,cpu_pupscr_sw2iso = <0xf>;
    fsl,cpu_pupscr_sw = <0x0>;
    fsl,cpu_pdnscr_iso2sw = <0x1>;
    fsl,cpu_pdnscr_iso = <0x1>;
    fsl,ldo-bypass = <0>; /* DCDC, ldo-enable */
};

&i2c1 {
    clock-frequency = <100000>;
    pinctrl-names = "default";
    pinctrl-0 = <&pinctrl_csi_i2c1>;
    status = "okay";

    mag3110@0e {
        compatible = "fsl,mag3110";
        reg = <0x0e>;
        position = <2>;
    };

    codec: wm8960@1a {
        compatible = "wlf,wm8960";
        reg = <0x1a>;
        clocks = <&clks IMX6UL_CLK_SAI2>;
        clock-names = "mclk";
        wlf,shared-lrclk;
    };

    fxls8471@1e {
        compatible = "fsl,fxls8471";
        reg = <0x1e>;
        position = <0>;
        interrupt-parent = <&gpio5>;
        interrupts = <5 8>;
    };

    fxas2100x@20 {
        compatible = "fsl,fxas2100x";
        reg = <0x20>;
    };
	
	myts_ft5x0x@38 {
		compatible = "myzr,myts-ft5316";
		reg = <0x38>;
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_snvs_ts>;
		interrupt-parent = <&gpio5>;
		interrupts = <0 0>;
		linux,wakeup;
    };
	
    isl1208@6f {
        compatible = "rtc,isl1208";
        reg = <0x6f>;
    };
};

&i2c2 {
    clock_frequency = <100000>;
    pinctrl-names = "default";
    pinctrl-0 = <&pinctrl_csi_i2c2>;
    status = "okay";
};

&pwm2 {
    pinctrl-names = "default";
    pinctrl-0 = <&pinctrl_gpio1_pwm2>;
    clocks = <&clks IMX6UL_CLK_PWM2>,
        <&clks IMX6UL_CLK_PWM2>;
    status = "okay";
};

&pwm4 {
    pinctrl-names = "default";
    pinctrl-0 = <&pinctrl_gpio1_pwm4>;
    clocks = <&clks IMX6UL_CLK_PWM4>,
        <&clks IMX6UL_CLK_PWM4>;
    status = "okay";
};

&pwm5 {
    pinctrl-names = "default";
    pinctrl-0 = <&pinctrl_nand_pwm5>;
    clocks = <&clks IMX6UL_CLK_PWM5>,
        <&clks IMX6UL_CLK_PWM5>;
    status = "okay";
};

&pxp {
    status = "okay";
};


&uart1 {
    pinctrl-names = "default";
    pinctrl-0 = <&pinctrl_uart1_uart1>;
    status = "okay";
};

&uart2 {
    pinctrl-names = "default";
    pinctrl-0 = <&pinctrl_uart2_uart2>;
    status = "okay";
};

&uart3 {
    pinctrl-names = "default";
    pinctrl-0 = <&pinctrl_uart3_uart3>;
    status = "okay";
};

&usbotg1 {
    pinctrl-names = "default";
    pinctrl-0 = <&pinctrl_gpio1_usb_otg1_id>;
    dr_mode = "otg";
    srp-disable;
    hnp-disable;
    adp-disable;
    status = "okay";
};

&usbotg2 {
    dr_mode = "host";
    disable-over-current;
    status = "okay";
};

&usdhc1 {
    pinctrl-names = "default";
    pinctrl-0 = <&pinctrl_sd1_usdhc1>;
    keep-power-in-suspend;
    enable-sdio-wakeup;
    status = "okay";
};

&wdog1 {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_gpio1_wdg1>;
	fsl,wdog_b;
};
