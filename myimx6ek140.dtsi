/ {
    chosen {
        stdout-path = &uart1;
    };

    memory {
        reg = <0x80000000 0x40000000>;
    };

    backlight {
        compatible = "pwm-backlight";
        pwms = <&pwm4 0 5000000>;
        brightness-levels = <0 4 8 16 32 64 128 255>;
        default-brightness-level = <4>;
        status = "okay";
    };
    
    pxp_v4l2 {
        compatible = "fsl,imx6ul-pxp-v4l2", "fsl,imx6sx-pxp-v4l2", "fsl,imx6sl-pxp-v4l2";
        status = "okay";
    };

    leds {
        compatible = "gpio-leds";
        pinctrl-names = "default";
        pinctrl-0 = <&pinctrl_snvs_gpio_leds>;
		
        leds-heartbeat {
            gpios = <&gpio5 4 GPIO_ACTIVE_HIGH>;	/* D1 */
            linux,default-trigger = "heartbeat";
        };
        
        leds-mmc1 {
            gpios = <&gpio5 1 GPIO_ACTIVE_HIGH>;	/* D2 */
            linux,default-trigger = "mmc1";
        };
		
        leds-timer {
            gpios = <&gpio5 8 GPIO_ACTIVE_HIGH>;	/* D4 */
            linux,default-trigger = "timer";
        };
        
        leds-gpio {
            gpios = <&gpio5 5 GPIO_ACTIVE_HIGH>;	/* D5 */
            linux,default-trigger = "gpio";
        };
    };

};

&clks {
    assigned-clocks = <&clks IMX6UL_CLK_PLL4_AUDIO_DIV>;
    assigned-clock-rates = <786432000>;
};

&adc1 {
    pinctrl-names = "default";
    num-channels = <10>;
    pinctrl-0 = <&pinctrl_gpio1_adc1>;
    status = "okay";
};

&ecspi1 {
    fsl,spi-num-chipselects = <1>;
    cs-gpios = <&gpio4 26 0>;
    pinctrl-names = "default";
    pinctrl-0 = <&pinctrl_csi_ecspi1 &pinctrl_csi_ecspi1_cs0>;
    status = "okay";

    spidev0: spi@0 {
        compatible = "spidev";
        reg = <0>;
        spi-max-frequency = <60000000>;
    };
};

&ecspi2 {
    fsl,spi-num-chipselects = <1>;
    cs-gpios = <&gpio4 22 0>;
    pinctrl-names = "default";
    pinctrl-0 = <&pinctrl_csi_ecspi2 &pinctrl_csi_ecspi2_cs0>;
    status = "okay";

    spidev1: spi@0 {
        compatible = "spidev";
        reg = <0>;
        spi-max-frequency = <60000000>;
    };
};
